<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/golden_brown_trans">

    <ImageButton
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:src="@drawable/baseline_edit_24"
        android:background="@color/green_100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:src="@drawable/baseline_delete_24"
        android:background="@color/delete_red"
        app:layout_constraintStart_toEndOf="@id/edit"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/animal_id"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="0"
        android:textSize="@dimen/txt_small_size"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintStart_toEndOf="@id/delete"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/animal_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Animal"
        android:textSize="@dimen/txt_small_size"
        android:maxLines="1"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintStart_toEndOf="@id/animal_id"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/animal_age"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Age"
        android:textSize="@dimen/txt_small_size"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/animal_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/animal_gender"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Gender"
        android:textSize="@dimen/txt_small_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/animal_age"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/animal_cage"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Cage"
        android:maxLines="1"
        android:textSize="@dimen/txt_small_size"
        app:layout_constraintStart_toEndOf="@id/animal_gender"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>